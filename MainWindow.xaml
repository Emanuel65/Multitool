<Window x:Class="Multitool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multitool"
        mc:Ignorable="d"
        Title="Multitool" Height="232" Width="539" WindowStartupLocation="CenterScreen">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <StackPanel>

        <!--#region Input -->
        <!--First string to compare -->
        <TextBlock Text="String A" Margin="5, 0"></TextBlock>
        <TextBox x:Name="txtBx_A" Margin="5" Height="50"></TextBox>

        <!--Second string to compare -->
        <TextBlock Text="String B" Margin="5, 0"></TextBlock>
        <TextBox x:Name="txtBx_B" Margin="5" Height="50"></TextBox>
        <!--#endregion-->


        <!--#region Interactive tools -->
        <Grid>
            <Grid.ColumnDefinitions></Grid.ColumnDefinitions>
            <Grid.ColumnDefinitions></Grid.ColumnDefinitions>
            <Grid.ColumnDefinitions></Grid.ColumnDefinitions>

            <Button x:Name="btn_CompareStrings" Margin="5" Padding="3" Content="Compare Strings"></Button>
            <Button x:Name="btn_Clear" Margin="5" Padding="3" Content="Clear"></Button>

            <TextBlock x:Name="txtBlk_Result" Margin="5" Padding="3" 
                       Text="Result" 
                       VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <!--#endregion-->
    </StackPanel>
</Window>
